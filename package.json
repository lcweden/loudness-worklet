{
  "name": "loudness-worklet",
  "version": "1.5.1",
  "description": "A lightweight and efficient AudioWorklet for real-time loudness measurement in the browser, compliant with the ITU-R BS.1770-5 standard.",
  "keywords": [
    "web-audio",
    "web-audio-api",
    "audio-meter",
    "audio-worklet",
    "loudness",
    "loudness-meter",
    "browser-audio",
    "ebu-r128",
    "itu-r-bs1770",
    "audio-processing",
    "audio-analysis",
    "true-peak",
    "lufs",
    "lra",
    "javascript",
    "typescript",
    "lightweight"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "author": "lcweden",
  "homepage": "https://lcweden.github.io/loudness-worklet/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lcweden/loudness-worklet.git"
  },
  "bugs": {
    "url": "https://github.com/lcweden/loudness-worklet/issues"
  },
  "scripts": {
    "dev": "vite --mode dev",
    "demo": "vite --mode demo",
    "test": "vitest",
    "build": "vite build --mode static && vite build --mode demo",
    "lib": "vite build --mode static && vite build --mode lib && tsc -p tsconfig.lib.json",
    "prepare": "npm run lib",
    "preview": "vite preview --mode demo",
    "format": "biome format --write",
    "lint": "biome lint --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@solidjs/router": "^0.15.4",
    "@tailwindcss/vite": "^4.1.17",
    "@types/audioworklet": "^0.0.91",
    "@types/node": "^24.10.1",
    "daisyui": "^5.5.5",
    "echarts": "^6.0.0",
    "solid-js": "^1.9.10",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.14"
  }
}
